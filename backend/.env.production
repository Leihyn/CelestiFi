# DeFi Pulse Backend - Production Environment

# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Redis Configuration (Railway/Upstash URL)
REDIS_URL=redis://default:password@redis-service.railway.internal:6379

# Somnia Chain Configuration
SOMNIA_RPC_URL=https://dream-rpc.somnia.network
SOMNIA_CHAIN_ID=50312

# Wallet Configuration
# IMPORTANT: Add your production private key via Railway dashboard
PRIVATE_KEY=your_production_private_key_here

# Whale Detection
WHALE_THRESHOLD_USD=10000

# CORS Configuration
# Update with your Vercel frontend URL
CORS_ORIGIN=https://defi-pulse.vercel.app

# Optional: Default Pools
DEFAULT_POOLS=
